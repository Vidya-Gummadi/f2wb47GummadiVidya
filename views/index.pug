extends layout

block content
  h1= title
  p Welcome to Pug
  button(type = "button", class = "btn btn-success", onClick = "doBump()") Click<br>
  div(id = "bump") Bump the count 
  
  a(href="queen") Queen
    script.
      let count = 0;
      let bump =1;
      function doBump(){
        count+=bump
        bump=bump+1;
        document.getElementById('bump').innerHTML= `Count ${count} with bump ${bump}`
      }